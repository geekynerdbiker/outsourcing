@model GenAI

@{
    ViewData["Title"] = "Delete";
}


<h2 id="mod">
    Delete GenAI Website
</h2>
<div id="cent">
    <h3 id="del_q">
        Are you sure you want to delete this website?
    </h3>
<div>
    <hr />
    <dl class="row">

            <dt class="col-sm-2 dt white-text bold-text">
                @Html.DisplayNameFor(model => model.GenAIName)
            </dt>
            <dd class="col-sm-10 white-text">
                @Html.DisplayFor(model => model.GenAIName)
            </dd>

            <dt class="col-sm-2 dt white-text bold-text">
                @Html.DisplayNameFor(model => model.Summary)
            </dt>
            <dd class="col-sm-10 white-text">
                @Html.DisplayFor(model => model.Summary)
            </dd>

            <dt class="col-sm-2 dt white-text bold-text">
                @Html.DisplayNameFor(model => model.ImageFilename)
            </dt>
            <dd class="col-sm-10 white-text">
                @Html.DisplayFor(model => model.ImageFilename)
            </dd>

            <dt class="col-sm-2 dt white-text bold-text">
                @Html.DisplayNameFor(model => model.AnchorLink)
            </dt>
            <dd class="col-sm-10 white-text">
                @Html.DisplayFor(model => model.AnchorLink)
            </dd>

            <dt class="col-sm-2 dt white-text bold-text">
                @Html.DisplayNameFor(model => model.Like)
            </dt>
            <dd class="col-sm-10 white-text">
                @Html.DisplayFor(model => model.Like)
            </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div id="del_btn">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-controller="Home" asp-action="GenAiSites">Back to GenAI Websites</a>
        </div>
        
    </form>
</div>
</div>

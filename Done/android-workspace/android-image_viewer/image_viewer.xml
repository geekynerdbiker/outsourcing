<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:autofillHints="Number 1"
    android:background="@color/white"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Do you want to start an activity?" />

    <CheckBox
        android:id="@+id/check_box_1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"

        android:text="Yes" />

    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:text="Select a name in the list below:" />


    <RadioGroup
        android:id="@+id/radio_group_1"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/radio_button_1"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:text="Image 1"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button_2"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:text="Image 2"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button_3"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:text="Image 3"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button_4"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:text="Image 4"></RadioButton>

        <RadioButton
            android:id="@+id/radio_button_5"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:text="Image 5"></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/button_1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:text="OK"></Button>

    <ImageView
        android:id="@+id/image_view_1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"></ImageView>
</LinearLayout>